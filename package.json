{
  "name": "url-shortener",
  "version": "1.0.0",
  "description": "URL Shortener with Next.js client and Express.js server",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run client\" \"npm run server\"",
    "client": "cd client && npm run dev",
    "server": "cd server && npm run dev",
    "install-all": "npm install && cd client && npm install && cd ../server && npm install",
    "build": "cd client && npm run build",
    "start": "concurrently \"npm run client:start\" \"npm run server:start\"",
    "client:start": "cd client && npm start",
    "server:start": "cd server && npm start",
    "lint": "concurrently \"npm run lint:client\" \"npm run lint:server\" \"npm run lint:root\"",
    "lint:client": "cd client && npm run lint",
    "lint:server": "cd server && npm run lint",
    "lint:root": "eslint *.js --ignore-pattern client --ignore-pattern server",
    "lint:fix": "concurrently \"npm run lint:client -- --fix\" \"npm run lint:server -- --fix\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0"
  },
  "keywords": [
    "url-shortener",
    "nextjs",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs"
}
